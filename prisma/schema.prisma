generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Page {
  id       String    @id @default("engagement_page")
  likes    Int       @default(0)
  comments Comment[]
}

model Comment {
  id        Int      @id @default(autoincrement())
  name      String
  text      String   @db.Text
  initial   String
  createdAt DateTime @default(now())

  page   Page   @relation(fields: [pageId], references: [id])
  pageId String
}